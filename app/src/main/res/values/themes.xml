<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Submission1AndroidFundamental" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/mukta</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/mukta_bold</item>
    </style>

    <style name="TextContent.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/mukta_semibold</item>
    </style>

    <style name="TextContent.Userdescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/bg_content</item>
    </style>
</resources>